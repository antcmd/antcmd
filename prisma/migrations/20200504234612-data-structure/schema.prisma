generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = "***"
}

model User {
  id    Int     @default(autoincrement()) @id
  name  String  @unique
  posts Post[]
}

model Post {
  content   String?
  id        Int     @default(autoincrement()) @id
  title     String
  author    User?   @relation(fields: [authorId], references: [id])
  authorId  Int?
}
