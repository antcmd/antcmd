generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = "***"
}

model User {
  id      Int     @default(autoincrement()) @id
  name    String  @unique
  posts   Post[]
  likes   Like[]
}

model Post {
  content      String?
  id           Int     @default(autoincrement()) @id
  title        String
  author       User?   @relation(fields: [authorId], references: [id])
  authorId     Int?
  actions      Action[]
  likes        Like[]
  numberPlayed Int     @default(0)
}

model Action {
  id        Int     @default(autoincrement()) @id
  time      DateTime?
  content   Int
}

model Like {
  id        Int     @default(autoincrement()) @id
  time      DateTime?
  author    User?   @relation(fields: [authorId], references: [id])
  authorId  Int?
  post      Post?   @relation(fields: [postId], references: [id])
  postId    Int?
}
